<p>
  <strong>Review:</strong>
  <%= review.body %>
</p>

<p>
  <strong>Rating:</strong>
  <%= review.rating %>
</p>

<p>
  <% if user_signed_in? %>
    <% if review.user_id == current_user.id %>
      <%= link_to 'Delete review', [review.restaurant, review],
                   method: :delete,
                   data: { confirm: 'Are you sure?' } %>
    <% end %>
  <% end %>
</p>
